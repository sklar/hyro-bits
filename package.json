{
  "name": "purplex-components",
  "version": "6.0.0",
  "private": true,
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./base/*": {
      "import": "./dist/esm/components/*/index.js",
      "require": "./dist/components/*/index.js",
      "types": "./dist/components/*/index.d.ts"
    },
    "./theme": {
      "import": "./dist/esm/theme.js",
      "require": "./dist/theme.js",
      "types": "./dist/theme.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-s copy:fonts storybook:build",
    "bump:major": "npm version major -m 'Bump v%s :rocket:'",
    "bump:minor": "npm version minor -m 'Bump v%s :point_up:'",
    "bump:patch": "npm version patch -m 'Bump v%s :speak_no_evil:'",
    "bump": "npm run bump:patch",
    "check:types": "tsc --noEmit --skipLibCheck",
    "compile": "tsup",
    "compile:icons": "svgr --expand-props none --filename-case kebab --typescript -d ./src/icons ./src/assets/images",
    "copy:fonts": "cp './node_modules/inter-ui/Inter (web latin)/Inter-roman.var.woff2' './src/assets/fonts/Inter.woff2'",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
    "preview": "vite preview",
    "start": "run-s copy:fonts storybook",
    "start:dev": "run-p start watch",
    "storybook": "start-storybook -p 6006 -c .storybook",
    "storybook:build": "build-storybook -c .storybook",
    "test": "echo 'Error: no test specified' && exit 1",
    "watch": "tsup --watch src"
  },
  "dependencies": {
    "@spicy-hooks/core": "^2.1.2",
    "case-anything": "^2.1.10",
    "color2k": "^2.0.0",
    "rc-slider": "^9.7.5",
    "rc-tooltip": "^5.1.1",
    "react-select": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.7",
    "@emotion/react": "^11.8.2",
    "@emotion/styled": "^11.8.1",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@svgr/cli": "^6.2.1",
    "@types/rc-tooltip": "^3.7.6",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@vitejs/plugin-react": "^1.2.0",
    "babel-loader": "^8.2.3",
    "babel-preset-react-app": "^10.0.1",
    "eslint": "^8.11.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-storybook": "^0.5.7",
    "husky": "^4.3.8",
    "inter-ui": "^3.19.3",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "storybook-addon-designs": "^6.2.1",
    "tsup": "^5.12.1",
    "typescript": "^4.6.2",
    "vite": "^2.8.6"
  },
  "peerDependencies": {
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "react": "^16",
    "react-dom": "^16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts,.jsx,.tsx --quiet"
    ]
  },
  "browserslist": [
    "last 2 versions and >0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "engines": {
    "node": ">=14.0"
  }
}
