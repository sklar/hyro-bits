{
  "name": "@sklar/hyro-bits",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sklar/hyro-bits"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "source": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn storybook:build",
    "bump:major": "npm version major -m 'Bump v%s :raised_hands:'",
    "bump:minor": "npm version minor -m 'Bump v%s :point_up:'",
    "bump:patch": "npm version patch -m 'Bump v%s'",
    "bump": "npm run bump:patch",
    "compile": "yarn clean && rollup -c",
    "clean": "rimraf -rf dist",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx",
    "prepublish": "yarn compile",
    "start": "yarn storybook",
    "storybook": "start-storybook -p 6006 -c .storybook -s ./src/assets",
    "storybook:build": "build-storybook -c .storybook -s ./src/assets",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "color2k": "^1.2.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.3",
    "typescript": "4.1.3"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.0",
    "@storybook/addon-actions": "^6.1.20",
    "@storybook/addon-essentials": "^6.1.20",
    "@storybook/addon-links": "^6.1.20",
    "@storybook/node-logger": "^6.1.20",
    "@storybook/preset-create-react-app": "^3.1.6",
    "@storybook/react": "^6.1.20",
    "eslint": "^7.21.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.40.0",
    "rollup-plugin-filesize": "^9.1.1",
    "storybook-addon-designs": "^5.4.5"
  },
  "peerDependencies": {
    "@emotion/react": "^11.0.0",
    "@emotion/styled": "^11.0.0",
    "color2k": "^1.2.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-scripts": "4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "prettier --write",
      "eslint --ext .js,.ts,.jsx,.tsx --quiet"
    ]
  },
  "browserslist": [
    "last 2 versions and >0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "engines": {
    "node": ">=14.0"
  }
}
