{
  "name": "@purplenl/purplex-components",
  "version": "0.4.0",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "source": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/purplenl/purplex-components"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "license": "UNLICENSED",
  "scripts": {
    "build": "yarn storybook:build",
    "bump:major": "npm version major -m 'Bump v%s :raised_hands:'",
    "bump:minor": "npm version minor -m 'Bump v%s :point_up:'",
    "bump:patch": "npm version patch -m 'Bump v%s :speak_no_evil:'",
    "bump": "npm run bump:patch",
    "ci": "yarn --frozen-lockfile",
    "compile": "yarn clean && rollup -c && tsc --project ./tsconfig.icons.json",
    "compile:icons": "svgr --expand-props none --typescript -d ./src/icons ./src/assets/images",
    "clean": "rimraf -rf dist",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx",
    "prepublishOnly": "yarn compile",
    "start": "yarn storybook",
    "start:dev": "run-p start watch:compile",
    "storybook": "start-storybook -p 6006 -c .storybook -s ./src/assets",
    "storybook:build": "build-storybook -c .storybook -s ./src/assets",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:compile": "rollup -cw"
  },
  "dependencies": {
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^2.4.1",
    "@rollup/plugin-typescript": "^8.2.0",
    "@storybook/addon-actions": "^6.1.20",
    "@storybook/addon-essentials": "^6.1.20",
    "@storybook/addon-links": "^6.1.20",
    "@storybook/node-logger": "^6.1.20",
    "@storybook/preset-create-react-app": "^3.1.6",
    "@storybook/react": "^6.1.20",
    "@svgr/cli": "^5.5.0",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "color2k": "^1.2.4",
    "eslint": "^7.21.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.40.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-filesize": "^9.1.1",
    "storybook-addon-designs": "^5.4.5",
    "typescript": "4.1.3"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "prettier --write",
      "eslint --ext .js,.ts,.jsx,.tsx --quiet"
    ]
  },
  "browserslist": [
    "last 2 versions and >0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "engines": {
    "node": ">=12.0"
  }
}
